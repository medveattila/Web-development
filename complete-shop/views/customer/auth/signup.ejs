<%- include('../../shared/includes/head', { pageTitle: 'Signup' }) %><!-- ha <.%- %>: nincs escapelve a kód hanem lefut-->
<link rel="stylesheet" href="/styles/forms.css"> <!--a rész specifikus css fájlokat az adott részben külön linkeljük, hogy ne kelljen mindig az egészet lekérni-->
<link rel="stylesheet" href="/styles/auth.css"> <!--számít a sorrend, a forms.css felülírja a base.css-t, a auth.css pedig a forms.css-t (ha ua dolgokra hattatjuk)-->
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <% if (inputData.errorMessage) { %> <!--az inputdata a beadott object-->
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>

        <% } %> 
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm E-Mail</label>
                <input type="email" name="confirm-email" id="confirm-email" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" minlength="6" value="<%= inputData.password %>" required>
            </p>
            <hr> <!--ez csak egy vizuális vonal-->
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" name="fullname" id="fullname" value="<%= inputData.fullname %>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" id="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input 
                type="text" 
                name="postal" 
                id="postal" 
                minlength="4" 
                maxlength="4" 
                value="<%= inputData.postal %>"
                required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<%= inputData.city %>" required>
            </p>
            <button class="btn">Create Account</button> <!--a button tud post requestet küldeni, az 'a' nem-->
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
<%- include('../../shared/includes/footer') %>