<ul class="nav-items">
    
    <% if (!locals.isAdmin) { %>
        <li><a href="/">Shop</a></li>
        <li><a href="/cart">Cart <span class="badge"><%= locals.cart.totalQuantity %></span></a></li>
    <% } %>  

    <% if (locals.isAuth && !locals.isAdmin) { %>
        <li><a href="/orders">Orders</a></li>
    <% } %>  

    <% if (locals.isAdmin) { %>
        <li><a href="/admin/products">Manage products</a></li>
        <li><a href="/admin/orders">Manage orders</a></li>
    <% } %>  

    <% if (!locals.isAuth) { %>
        <li><a href="/signup">Signup</a></li>
        <li><a href="/login">Login</a></li>
    <% } %> 

    <% if (locals.isAuth) { %> <!--Tehát ez(ek) a list element(ek) csak akkor jelennek meg, ha be van logolva az user-->
        <li>
            <form action="/logout" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>"> <!--minden formnál kell a csrf token-->
                <button>Logout</button>
            </form>
        </li>
    <% } %>  
</ul>